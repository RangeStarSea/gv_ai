{
  "watch": [
    "index.js",
    "routes/",
    "config/",
    "views/",
    "public/css/",
    "public/js/"
  ],
  "ext": "js,hbs,css,json",
  "ignore": [
    "node_modules/",
    "dist_build/",
    "gulp_tasks/",
    "*.md",
    "package*.json"
  ],
  "delay": 1000,
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "echo '\nðŸ”„ Server restarting due to file changes...\n'"
  }
}
